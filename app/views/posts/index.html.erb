<h2>All Upcoming Events</h2>

<% @posts.each do |p| %>
	<div style="border:1px solid black">
		<h3><%= p.title %></h3>
		<p><%= p.topic %></p>
		<p><%= p.date.strftime('%m/%d/%Y') %> (<%=p.start_time.strftime('%H:%M %p') %>)</p>
		<p><%= link_to "View", post_path(p) %></p>
	</div>
<% end %>

<%= link_to "Create Post", new_post_path %>